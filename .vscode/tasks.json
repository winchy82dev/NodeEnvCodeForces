{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "shell": {
    "executable": "cmd.exe"
},
  "tasks": [
    {
      "label": "Node Js Problem Solving",
      // "type": "shell",
      "type": "shell",
      "command": "node",
      "args": [
        "${file}",
        "<",
        "./input.txt",
        ">",
        "./output.txt"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },"presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ]
}